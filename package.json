{
  "name": "vgpro.gg",
  "version": "0.0.1",
  "description": "Using latest JavaScript features on the server",
  "author": "Pierre Ortega",
  "main": "dist/index.js",
  "engines": {
    "node": "~6.9.1",
    "npm": ">=4.6.1 <5"
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "node -r dotenv/config dist/index.js",
    "dev": "nodemon src/index.js --exec \"node --inspect -r dotenv/config -r babel-register\" --trace-warnings ",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "test": "jest --watch",
    "lint": "esw -w src test",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [],
  "dependencies": {
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "couchbase-promises": "^4.2.0",
    "express": "^4.15.3",
    "helmet": "^3.8.0",
    "ioredis": "^3.1.4",
    "kue": "^0.11.6",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "response-time": "^2.3.2",
    "vainglory": "^1.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.0.1",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-resolver": "^1.1.0",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "bithound": "^1.7.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-babel-root-import": "0.0.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "eslint-watch": "^3.1.2",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.2"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      [
        "babel-plugin-root-import",
        {
          "rootPathSuffix": "src/",
          "rootPathPrefix": "~"
        }
      ],
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": "airbnb",
    "rules": {
      "func-names": [
        "error",
        "never"
      ]
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
